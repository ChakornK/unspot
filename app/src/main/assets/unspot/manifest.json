{
  "manifest_version": 3,
  "name": "unspot",
  "version": "1.0",
  "description": "Unspot web extension",
  "browser_specific_settings": {
    "gecko": {
      "id": "@unspot"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.spotify.com/*"],
      "js": ["messaging.js"]
    },
    {
      "matches": ["*://*.spotify.com/*"],
      "js": ["adblock.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "permissions": ["nativeMessaging", "nativeMessagingFromContent", "geckoViewAddons"]
}
